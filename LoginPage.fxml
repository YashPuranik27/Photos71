<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photoalbum.LoginController">
    <VBox alignment="CENTER" spacing="20">
        <Text style="-fx-font-size: 47px; -fx-font-weight: bold; -fx-fill: #333;" text="Photos" />
        <TextField fx:id="nameInput" maxWidth="200" onKeyPressed="#keyPress" promptText="Username" />
        <Button fx:id="loginButton" onAction="#login" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10;" text="Enter">
            <effect>
                <DropShadow color="#999999" offsetX="2" offsetY="2" />
            </effect>
        </Button>
    </VBox>
</StackPane>
