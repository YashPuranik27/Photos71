<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photoalbum.SearchController">
    <Label layoutX="224.0" layoutY="11.0" text="Search Photos" style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: #333;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Label>

    <TextField fx:id="mandatoryTag1Name" layoutX="71.0" layoutY="102.0" prefWidth="104.0" promptText="Tag Name"/>
    <TextField fx:id="mandatoryTag1Value" layoutX="212.0" layoutY="102.0" prefWidth="96.0" promptText="Tag Value"/>
    <TextField fx:id="mandatoryTag2Name" layoutX="70.0" layoutY="137.0" prefWidth="104.0" promptText="Tag Name"/>
    <TextField fx:id="mandatoryTag2Value" layoutX="212.0" layoutY="137.0" prefWidth="96.0" promptText="Tag Value"/>

    <Label layoutX="137.0" layoutY="49.0" text="Search by Tags" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
    <Label layoutX="23.0" layoutY="79.0" text="Mandatory Tags" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
    <Label layoutX="21.0" layoutY="106.0" text="Tag 1" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
    <Label layoutX="21.0" layoutY="141.0" text="Tag 2" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>

    <ListView fx:id="searchResults" layoutX="372.0" layoutY="49.0" prefHeight="281.0" prefWidth="200.0">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </ListView>

    <Button fx:id="makeAlbum" layoutX="23.0" layoutY="286.0" onAction="#saveResultsAsAlbum" text="Create Album with Results" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Button>
    <TextField fx:id="albumNameInput" layoutX="235.0" layoutY="286.0" prefHeight="24.0" prefWidth="121.0" promptText="Album Name"/>

    <Button fx:id="logout" layoutX="520.0" layoutY="11.0" onAction="#logOut" text="Logout" style="-fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Button>
    <Button fx:id="searchByTagButton" layoutX="154.0" layoutY="327.0" onAction="#searchByTag" text="Search by Tags" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Button>
    <Button fx:id="searchByDateButton" layoutX="154.0" layoutY="359.0" onAction="#searchByDate" text="Search by Date" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Button>
    <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" onAction="#goBack" text="Back" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10;">
        <effect>
            <DropShadow offsetX="2" offsetY="2" color="#999999"/>
        </effect>
    </Button>

    <Label layoutX="374.0" layoutY="343.0" text="Search by Date (mm/dd/yyyy)" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
    <TextField fx:id="beginningDateInput" layoutX="400.0" layoutY="367.0" prefHeight="24.0" prefWidth="59.0" promptText="from"/>
    <TextField fx:id="endDateInput" layoutX="483.0" layoutY="367.0" prefHeight="24.0" prefWidth="59.0" promptText="to"/>
</AnchorPane>