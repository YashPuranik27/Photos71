<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="photoalbum.SearchController">
    <Label layoutX="224.0" layoutY="11.0" text="Search Photos" style="-fx-font-size: 25px;"/>
    <TextField fx:id="mandatoryTag1Name" layoutX="71.0" layoutY="102.0" prefWidth="104.0" text="Tag Name"/>
    <TextField fx:id="mandatoryTag1Value" layoutX="212.0" layoutY="102.0" prefWidth="96.0" text="Tag Value"/>
    <TextField fx:id="mandatoryTag2Name" layoutX="70.0" layoutY="137.0" prefWidth="104.0" text="Tag Name"/>
    <TextField fx:id="mandatoryTag2Value" layoutX="212.0" layoutY="137.0" prefWidth="96.0" text="Tag Value"/>

    <Label layoutX="137.0" layoutY="49.0" text="Search by Tags"/>
    <Label layoutX="21.0" layoutY="192.0" text="Optional Tags"/>
    <Label layoutX="23.0" layoutY="79.0" text="Mandatory Tags"/>
    <Label layoutX="21.0" layoutY="106.0" text="Tag 1"/>
    <Label layoutX="21.0" layoutY="141.0" text="Tag 2"/>

    <ListView fx:id="searchResults" layoutX="372.0" layoutY="49.0" prefHeight="281.0" prefWidth="200.0"/>

    <Button fx:id="makeAlbum" layoutX="23.0" layoutY="286.0" onAction="#saveResultsAsAlbum"
            text="Create Album with Results"/>
    <TextField fx:id="albumNameInput" layoutX="235.0" layoutY="286.0" prefHeight="24.0" prefWidth="121.0"
               text="Album Name"/>

    <Button fx:id="logout" layoutX="520.0" layoutY="11.0" onAction="#logOut" text="Logout"/>
    <Button fx:id="searchByTagButton" layoutX="154.0" layoutY="327.0" onAction="#searchByTag" text="Search by Tags"/>
    <Button fx:id="searchByDateButton" layoutX="154.0" layoutY="359.0" onAction="#searchByDate" text="Search by Date"/>
    <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" onAction="#goBack" text="Back"/>

    <Label layoutX="374.0" layoutY="343.0" text="Search by Date (mm/dd/yyyy)"/>
    <TextField fx:id="beginningDateInput" layoutX="400.0" layoutY="367.0" prefHeight="24.0" prefWidth="59.0"
               text="from"/>
    <TextField fx:id="endDateInput" layoutX="483.0" layoutY="367.0" prefHeight="24.0" prefWidth="59.0" text="to"/>
</AnchorPane>