<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<TitledPane collapsible="false" style="-fx-alignment: CENTER;" text="Admin Control Panel" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photoalbum.gui.controller.AdminController">
   <content>
      <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;">
      
          <ListView fx:id="UserList" layoutX="386.0" layoutY="14.0" prefHeight="373.0" prefWidth="200.0">
              <effect>
                  <DropShadow color="#999999" offsetX="2" offsetY="2" />
              </effect>
          </ListView>
      
          <Button fx:id="AddUserButton" layoutX="46.0" layoutY="176.0" onAction="#addUser" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px;" text="Add User">
              <effect>
                  <DropShadow color="#999999" offsetX="2" offsetY="2" />
              </effect>
            <font>
               <Font size="18.0" />
            </font>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
          </Button>
      
          <Button fx:id="DelUserButton" layoutX="238.0" layoutY="176.0" onAction="#deleteUser" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 12px;" text="Delete User">
              <effect>
                  <DropShadow color="#999999" offsetX="2" offsetY="2" />
              </effect>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
          </Button>
      
          <TextField fx:id="Enteruser" layoutX="108.0" layoutY="251.0" promptText="Username">
              <effect>
                  <DropShadow color="#999999" offsetX="1" offsetY="1" />
              </effect>
          </TextField>
      
          <Label layoutX="104.0" layoutY="95.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome Admin">
              <effect>
                  <DropShadow color="#999999" offsetX="2" offsetY="2" />
              </effect>
          </Label>
         <Button fx:id="LogOffButton" layoutX="22.0" layoutY="360.0" mnemonicParsing="false" onAction="#logOut" style="-fx-background-color: red; -fx-text-fill: white; -fx-padding: 5;" text="Logout" />
      </AnchorPane>
   </content>
   <font>
      <Font name="System Bold" size="12.0" />
   </font>
</TitledPane>
